[
  {
    "block": {
      "key": "incident_heading",
      "type": "heading",
      "title": "Incident description"
    }
  },
  {
    "block": {
      "type": "radio",
      "key": "claim_type",
      "title": "Claim type",
      "options": [
        {
          "key": "illness",
          "value": "Illness"
        },
        {
          "key": "death",
          "value": "Death"
        }
      ]
    }
  },
  {
    "block": {
      "key": "incident_date",
      "type": "input.date",
      "title": "Date of incident",
      "placeholder": "{{ dateNow format='DD-MM-YYYY' }}"
    }
  },
  {
    "block": {
      "key": "reported_date",
      "type": "input.date",
      "title": "Date Reported",
      "default_value": "{{ dateNow format='DD-MM-YYYY'  }}",
      "placeholder": "{{ dateNow format='DD-MM-YYYY' }}"
    }
  },
  {
    "show_if": "{{ifCondition (dateDifference claim.block_states.reported_date.value claim.block_states.incident_date.value measurement='days') '>' 60}}",
    "block": {
      "key": "date_warning_past",
      "type": "alert",
      "markdown": "Claims should be logged 60 from the incident date",
      "color": "danger"
    }
  },
  {
    "show_if": "{{if (if (dateDifference claim.block_states.incident_date.value claim.policy.start_date measurement='days') '<' 30) '&&' (if claim.block_states.claim_type.option_value '===' 'Illness')}}",
    "block": {
      "key": "date_warning_illness",
      "type": "alert",
      "markdown": "Claims for illness should be logged 1 month from the policy start date",
      "color": "danger"
    }
  },
  {
    "show_if": "{{if (if (dateDifference claim.incident_date claim.policy.start_date measurement='days') '<' 90) '&&' (if claim.block_states.claim_type.option_value '===' 'Death')}}",
    "block": {
      "key": "date_warning_death",
      "type": "alert",
      "markdown": "Claims for death should be logged 3 month from the policy start date.",
      "color": "danger"
    }
  },
  {
    "block": {
      "key": "incident_description",
      "type": "input.paragraph",
      "title": "Description of incident",
      "placeholder": "Describe the unfortunate event that took place on the date of the incident",
      "max_length": 500,
      "min_length": 1
    }
  },
  {
    "block": {
      "key": "claim_type_divider",
      "type": "divider"
    }
  },
  {
    "block": {
      "key": "payment_details",
      "type": "heading",
      "title": "Payment details"
    }
  },
  {
    "block": {
      "key": "bank_name",
      "type": "dropdown",
      "title": "Bank Name",
      "options": [
        {
          "key": "absa",
          "value": "ABSA"
        },
        {
          "key": "african_bank",
          "value": "African Bank"
        },
        {
          "key": "bidvest",
          "value": "Bidvest"
        },
        {
          "key": "capitec",
          "value": "Capitec"
        },
        {
          "key": "discovery_bank",
          "value": "Discovery Bank"
        },
        {
          "key": "fnb",
          "value": "FNB"
        },
        {
          "key": "investec",
          "value": "Investec"
        },
        {
          "key": "ithala",
          "value": "Ithala"
        },
        {
          "key": "nedbank",
          "value": "Nedbank"
        },
        {
          "key": "old_mutual",
          "value": "Old Mutual"
        },
        {
          "key": "postbank",
          "value": "Postbank"
        },
        {
          "key": "standard_bank",
          "value": "Standard Bank"
        },
        {
          "key": "tyme_bank",
          "value": "Tyme Bank"
        }
      ]
    }
  },
  {
    "block": {
      "key": "bank_code",
      "type": "input.number",
      "title": "Branch Code",
      "placeholder": 632005
    }
  },
  {
    "block": {
      "key": "account_type",
      "type": "dropdown",
      "title": "Account Type",
      "options": [
        {
          "key": "savings_account",
          "value": "Savings Account"
        },
        {
          "key": "cheque_account",
          "value": "Cheque Account"
        }
      ]
    }
  },
  {
    "block": {
      "key": "account_number",
      "type": "input.number",
      "title": "Account Number",
      "placeholder": 123456789
    }
  },
  {
    "disabled_if": "{{if (if claim.approval_status '!==' 'approved') '||' (if claim.approval_status '!==' 'goodwill') }}",
    "block": {
      "type": "payout_request",
      "key": "payout_block",
      "title": "Dinosaur Payout",
      "amount": "{{ claim.policy.sum_assured }}",
      "description": "Payout amount due for the deceased/injured dinosaur",
      "payee": {
        "type": "policyholder",
        "policyholder_id": "{{ claim.policy.policyholder_id }}",
        "amount": "{{ claim.policy.sum_assured }}",
        "percentage": "100",
        "payment_details": {
          "type": "eft",
          "details": {
            "bank_name": "{{ claim.block_states.bank_name.option_value }}",
            "branch_code": "{{ claim.block_states.bank_code.value }}",
            "account_type": "{{ claim.block_states.account_type.value }}",
            "account_number": "{{ claim.block_states.account_number.value }}"
          }
        }
      }
    }
  }
]
